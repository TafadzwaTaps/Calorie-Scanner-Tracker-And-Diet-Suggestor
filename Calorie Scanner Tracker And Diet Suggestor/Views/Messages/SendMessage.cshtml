@{
    ViewData["Title"] = "Send Message";
}

<style>
    .footer {
        margin-top: 250px;
    }
</style>

<div class="container mt-5">
    <div class="card shadow-sm">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Send a Message</h2>
        </div>
        <div class="card-body">
            <form method="post" asp-action="SendMessage">
                <div class="form-group mb-3">
                    <label for="receiverUsername" class="form-label"><strong>Receiver Username:</strong></label>
                    <input type="text"
                           id="receiverUsername"
                           name="receiverUsername"
                           class="form-control"
                           placeholder="Enter the username of the recipient"
                           required />
                </div>

                <div class="form-group mb-3">
                    <label for="content" class="form-label"><strong>Message Content:</strong></label>
                    <textarea id="content"
                              name="content"
                              class="form-control"
                              rows="5"
                              placeholder="Type your message here..."
                              required></textarea>
                </div>

                <div class="d-flex justify-content-between align-items-center">
                    <button type="submit" class="btn btn-primary px-4">
                        <i class="fas fa-paper-plane"></i> Send Message
                    </button>
                    <a href="@Url.Action("Inbox", "Message")" class="btn btn-secondary px-4">
                        <i class="fas fa-inbox"></i> Back to Inbox
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>
