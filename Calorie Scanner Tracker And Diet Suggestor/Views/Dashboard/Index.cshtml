@model Calorie_Scanner_Tracker_And_Diet_Suggestor.Models.DashboardViewModel
@{
    ViewData["Title"] = "Dashboard";
}

<div class="container mt-5">
    <h2 class="text-center fw-bold mb-4">Dashboard Overview</h2>

    <!-- Filter Section -->
    <div class="row mb-4">
        <div class="col-md-4">
            <form method="get" asp-action="Index">
                <div class="form-group mb-3">
                    <label for="mealType">Meal Type</label>
                    <select asp-for="MealTypeFilter" class="form-control">
                        <option value="">All</option>
                        <option value="breakfast">Breakfast</option>
                        <option value="lunch">Lunch</option>
                        <option value="dinner">Dinner</option>
                    </select>
                </div>
                <div class="form-group mb-3">
                    <label for="startDate">Start Date</label>
                    <input type="date" asp-for="StartDateFilter" class="form-control" />
                </div>
                <div class="form-group mb-3">
                    <label for="endDate">End Date</label>
                    <input type="date" asp-for="EndDateFilter" class="form-control" />
                </div>
                <button type="submit" class="btn btn-primary w-100">Apply Filters</button>
            </form>
        </div>
    </div>

    <!-- Dashboard Stats -->
    <div class="row">
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg p-4 border-0 text-center bg-light hover-shadow">
                <h4 class="text-danger"><i class="fas fa-fire fa-lg me-2"></i> Total Calories</h4>
                <p class="display-6 fw-bold">@Model.TotalCalories kcal</p>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <div class="card shadow-lg p-4 border-0 text-center bg-light hover-shadow">
                <h4 class="text-primary"><i class="fas fa-chart-pie fa-lg me-2"></i> Macronutrient Breakdown</h4>
                <p class="fs-5">Protein: <strong>@Model.TotalProtein g</strong> | Carbs: <strong>@Model.TotalCarbs g</strong> | Fats: <strong>@Model.TotalFats g</strong></p>
            </div>
        </div>
    </div>

    <!-- Chart Section -->
    <div class="row mb-5">
        <div class="col-md-6 mb-4">
            <h4 class="text-center">Calories Breakdown (Pie Chart)</h4>
            <div class="card shadow-lg p-3 bg-light">
                <canvas id="pieChart"></canvas>
            </div>
        </div>
        <div class="col-md-6 mb-4">
            <h4 class="text-center">Calories Over Time (Bar Chart)</h4>
            <div class="card shadow-lg p-3 bg-light">
                <canvas id="barChart"></canvas>
            </div>
        </div>
    </div>

    <!-- Meal Logs Table -->
    <div class="row">
        <h4 class="text-center mb-4">Your Meals</h4>
        <div class="col-md-12">
            <div class="table-responsive">
                <table class="table table-striped table-bordered">
                    <thead class="table-light">
                        <tr>
                            <th>Meal</th>
                            <th>Calories</th>
                            <th>Protein</th>
                            <th>Carbs</th>
                            <th>Fats</th>
                            <th>Date Logged</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var log in Model.FoodLogs)
                        {
                            <tr>
                                <td>@log.Meal.Name</td>
                                <td>@log.Meal.Calories</td>
                                <td>@log.Meal.Protein</td>
                                <td>@log.Meal.Carbs</td>
                                <td>@log.Meal.Fats</td>
                                <td>@log.DateLogged.ToString("g")</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

<!-- Add Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script>
    // Pie Chart: Macronutrient Breakdown (Protein, Carbs, Fats)
    var pieCtx = document.getElementById('pieChart').getContext('2d');
    var pieChart = new Chart(pieCtx, {
        type: 'pie',
        data: {
            labels: ['Protein', 'Carbs', 'Fats'],
            datasets: [{
                label: 'Macronutrient Breakdown',
                data: [@Model.TotalProtein, @Model.TotalCarbs, @Model.TotalFats], // Data for Protein, Carbs, and Fats
                backgroundColor: ['rgba(255, 99, 132, 0.2)', 'rgba(54, 162, 235, 0.2)', 'rgba(255, 159, 64, 0.2)'],
                borderColor: ['rgba(255, 99, 132, 1)', 'rgba(54, 162, 235, 1)', 'rgba(255, 159, 64, 1)'],
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            plugins: {
                legend: {
                    position: 'top',
                },
                tooltip: {
                    callbacks: {
                        label: function(tooltipItem) {
                            return tooltipItem.label + ': ' + tooltipItem.raw + 'g';
                        }
                    }
                }
            }
        }
    });

    // Bar Chart: Daily Calories Consumed
    var barCtx = document.getElementById('barChart').getContext('2d');
    var barChart = new Chart(barCtx, {
        type: 'bar',
        data: {
            labels: @Html.Raw(Json.Serialize(Model.ChartData.Select(x => x.Date).ToList())), // Dates
            datasets: [{
                label: 'Calories Consumed',
                data: @Html.Raw(Json.Serialize(Model.ChartData.Select(x => x.Calories).ToList())), // Calories data
                backgroundColor: 'rgba(75, 192, 192, 0.2)',
                borderColor: 'rgba(75, 192, 192, 1)',
                borderWidth: 1
            }]
        },
        options: {
            responsive: true,
            scales: {
                x: {
                    title: {
                        display: true,
                        text: 'Date'
                    }
                },
                y: {
                    title: {
                        display: true,
                        text: 'Calories'
                    }
                }
            }
        }
    });
</script>

