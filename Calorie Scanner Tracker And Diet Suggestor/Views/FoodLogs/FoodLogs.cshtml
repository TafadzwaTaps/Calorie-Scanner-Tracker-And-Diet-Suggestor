@model IEnumerable<FoodLog>

<style>
    /* Container for the table */
    .table-container {
        max-width: 1000px;
        margin: 0 auto;
        padding: 20px;
        background-color: #fff;
        border-radius: 8px;
        box-shadow: 0px 4px 12px rgba(0, 0, 0, 0.1);
    }

        .table-container h2 {
            text-align: center;
            color: #4CAF50;
            margin-bottom: 20px;
        }

    /* Styling for the table */
    .food-log-table {
        width: 100%;
        border-collapse: collapse;
        margin-top: 20px;
        background-color: #f9f9f9;
    }

        .food-log-table th,
        .food-log-table td {
            padding: 12px;
            text-align: center;
            border: 1px solid #ddd;
        }

        .food-log-table th {
            background-color: #4CAF50;
            color: #fff;
            font-weight: bold;
        }

        /* Hover and row striping effects */
        .food-log-table tr:nth-child(even) {
            background-color: #f2f2f2;
        }

        .food-log-table tr:hover {
            background-color: #e1f5e1;
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .food-log-table {
            font-size: 14px;
        }

            .food-log-table th,
            .food-log-table td {
                padding: 8px;
            }
    }
</style>

<div class="table-container">
    <h2>Food Log</h2>
    <table class="food-log-table">
        <thead>
            <tr>
                <th>Meal</th>
                <th>Calories</th>
                <th>Protein</th>
                <th>Carbs</th>
                <th>Fats</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var log in Model)
            {
                <tr>
                    <td>@log.Meal.Name</td> <!-- Access the Meal Name -->
                    <td>@log.Meal.Calories</td> <!-- Access the Calories from Meal -->
                    <td>@log.Meal.Protein</td> <!-- Access Protein from Meal -->
                    <td>@log.Meal.Carbs</td> <!-- Access Carbs from Meal -->
                    <td>@log.Meal.Fats</td> <!-- Access Fats from Meal -->
                </tr>
            }
        </tbody>
    </table>
</div>


