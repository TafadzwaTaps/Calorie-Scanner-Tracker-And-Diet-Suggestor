@model User

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        :root {
            --bg-light: #f8f9fa;
            --text-light: #212529;
            --card-light: white;
            --btn-light: #0d6efd;
            --bg-dark: #121212;
            --text-dark: #f8f9fa;
            --card-dark: #1e1e1e;
            --btn-dark: #1e3a8a;
        }

        body {
            background-color: var(--bg-light);
            color: var(--text-light);
            transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .card {
            background-color: var(--card-light);
            color: var(--text-light);
            border: none;
            transition: background 0.3s ease-in-out, color 0.3s ease-in-out;
        }

        .btn-primary {
            background-color: var(--btn-light);
            border: none;
            font-weight: 600;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        /* Dark Mode */
        body.dark-mode {
            background-color: var(--bg-dark);
            color: var(--text-dark);
        }

        .dark-mode .card {
            background-color: var(--card-dark);
            color: var(--text-dark);
        }

        .dark-mode .btn-primary {
            background-color: var(--btn-dark);
        }

            .dark-mode .btn-primary:hover {
                background-color: #172554;
            }

        .toggle-container {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }

        .form-control {
            padding: 12px;
            border-radius: 8px;
            border: 1px solid #ccc;
        }

        .dark-mode .form-control {
            background-color: #222;
            color: white;
            border: 1px solid #444;
        }
    </style>
</head>

<body>
    <!-- Dark Mode Toggle -->
    <div class="toggle-container">
        <button id="darkModeToggle" class="btn btn-outline-secondary">
            <i class="fas fa-moon"></i> Toggle Dark Mode
        </button>
    </div>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4 rounded-4" style="max-width: 400px; width: 100%;">
            <h2 class="text-center mb-4 fw-bold text-primary">Create an Account</h2>

            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label class="form-label fw-semibold">Name</label>
                    <input type="text" class="form-control p-2" asp-for="Username" required placeholder="Enter your full name">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Email</label>
                    <input type="email" class="form-control p-2" asp-for="Email" required placeholder="Enter your email">
                </div>

                <div class="mb-3">
                    <label class="form-label fw-semibold">Password</label>
                    <input type="password" class="form-control p-2" asp-for="PasswordHash" required placeholder="Enter a strong password">
                </div>

                <button type="submit" class="btn btn-primary w-100 py-2 rounded-3">Register</button>
            </form>

            <p class="text-center mt-3">
                Already have an account? <a href="/Auth/Login" class="text-decoration-none text-success fw-semibold">Login</a>
            </p>
        </div>
    </div>

    <script>
        const darkModeToggle = document.getElementById("darkModeToggle");
        const body = document.body;

        // Load Dark Mode Preference
        if (localStorage.getItem("dark-mode") === "enabled") {
            body.classList.add("dark-mode");
        }

        darkModeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");

            // Save Preference
            if (body.classList.contains("dark-mode")) {
                localStorage.setItem("dark-mode", "enabled");
            } else {
                localStorage.removeItem("dark-mode");
            }
        });
    </script>
</body>
</html>
