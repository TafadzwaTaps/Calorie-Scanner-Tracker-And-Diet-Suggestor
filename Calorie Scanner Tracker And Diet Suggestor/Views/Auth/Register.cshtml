@model Users

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Register</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>

    <style>
        :root {
            --bg-light: white;
            --text-light: black;
            --btn-light: #0d6efd;
            --card-light: #f8f9fa;
            --bg-dark: black;
            --text-dark: white;
            --btn-dark: #1e3a8a;
            --card-dark: #121212;
        }

        body {
            background-color: var(--bg-light);
            color: var(--text-light);
            transition: background-color 0.3s, color 0.3s;
        }

        .card {
            background-color: var(--card-light);
            color: var(--text-light);
            transition: background-color 0.3s, color 0.3s;
        }

        .btn-primary {
            background-color: var(--btn-light);
            border: none;
        }

            .btn-primary:hover {
                background-color: #0b5ed7;
            }

        /* Dark Mode */
        body.dark-mode {
            background-color: var(--bg-dark);
            color: var(--text-dark);
        }

        .dark-mode .card {
            background-color: var(--card-dark);
            color: var(--text-dark);
        }

        .dark-mode .btn-primary {
            background-color: var(--btn-dark);
        }

            .dark-mode .btn-primary:hover {
                background-color: #172554;
            }

        .toggle-container {
            display: flex;
            justify-content: center;
            margin-bottom: 15px;
        }
    </style>
</head>

<body>
    <!-- Toggle Button -->
    <div class="toggle-container">
        <button id="darkModeToggle" class="btn btn-secondary">🌙 Toggle Dark Mode</button>
    </div>

    <div class="container d-flex justify-content-center align-items-center vh-100">
        <div class="card shadow-lg p-4" style="max-width: 400px; width: 100%;">
            <h2 class="text-center mb-4">Create an Account</h2>

            <form method="post" asp-action="Register">
                <div class="mb-3">
                    <label class="form-label">Name</label>
                    <input type="text" class="form-control" asp-for="Username" required placeholder="Enter your full name">
                </div>

                <div class="mb-3">
                    <label class="form-label">Email</label>
                    <input type="email" class="form-control" asp-for="Email" required placeholder="Enter your email">
                </div>

                <div class="mb-3">
                    <label class="form-label">Password</label>
                    <input type="password" class="form-control" asp-for="PasswordHash" required placeholder="Enter a strong password">
                </div>

                <button type="submit" class="btn btn-primary w-100">Register</button>
            </form>

            <p class="text-center mt-3">
                Already have an account? <a href="/Auth/Login" class="text-decoration-none">Login</a>
            </p>
        </div>
    </div>

    <script>
        const darkModeToggle = document.getElementById("darkModeToggle");
        const body = document.body;

        darkModeToggle.addEventListener("click", () => {
            body.classList.toggle("dark-mode");
        });
    </script>
</body>
</html>
