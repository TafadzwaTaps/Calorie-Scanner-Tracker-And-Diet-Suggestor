@model User

<div class="container d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg p-4 border-0 rounded-4" style="max-width: 400px; width: 100%; background: #f8f9fa;">
        <h2 class="text-center mb-4 fw-bold text-primary">Sign In</h2>

        <form method="post" asp-action="Login">
            <!-- Email Input -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Email</label>
                <input type="email" class="form-control p-2 rounded-3" asp-for="Email" required placeholder="Enter your email">
            </div>

            <!-- Password Input -->
            <div class="mb-3">
                <label class="form-label fw-semibold">Password</label>
                <input type="password" class="form-control p-2 rounded-3" asp-for="Password" required placeholder="Enter your password">
            </div>

            <!-- Error Message -->
            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger text-center p-2" role="alert">
                    Invalid email or password.
                </div>
            }

            <!-- Forgot Password Link -->
            <div class="mb-3 text-end">
                <a href="/Auth/ForgotPassword" class="text-decoration-none text-primary">Forgot your password?</a>
            </div>

            <!-- Login Button -->
            <button type="submit" class="btn btn-primary w-100 fw-semibold py-2">Login</button>
        </form>

        <!-- Register Link -->
        <p class="text-center mt-3">
            Don't have an account? <a href="/Auth/Register" class="text-decoration-none text-success fw-semibold">Register</a>
        </p>

        <hr>

        <!-- Social Login Buttons -->
        <div class="d-grid gap-2">
            <a href="@Url.Action("LoginWithGoogle", "Auth")" class="btn btn-outline-danger fw-semibold">
                <i class="fab fa-google me-2"></i> Login with Google
            </a>
            <a href="@Url.Action("LoginWithFacebook", "Auth")" class="btn btn-outline-primary fw-semibold">
                <i class="fab fa-facebook-f me-2"></i> Login with Facebook
            </a>
        </div>
    </div>
</div>

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
