@model Calorie_Scanner_Tracker_And_Diet_Suggestor.Models.ForgotPasswordViewModel

@{
    ViewData["Title"] = "Forgot Password";
}

<style>
    /* Background */
    body {
        background: linear-gradient(135deg, #00bcd4, #009688);
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container2 {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .wrapper {
        width: 420px;
        background: #111;
        border: 2px solid #00bcd4;
        border-radius: 15px;
        padding: 40px;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(5px);
        text-align: center;
    }

        /* Header */
        .wrapper h1 {
            font-size: 28px;
            color: #fff;
            margin-bottom: 20px;
            font-weight: 700;
        }

    /* Input Styling */
    .input-box {
        position: relative;
        width: 100%;
        height: 50px;
        margin: 25px 0;
    }

        .input-box input {
            width: 100%;
            height: 100%;
            background: transparent;
            border: 2px solid #fff;
            border-radius: 8px;
            padding: 15px 25px;
            font-size: 16px;
            color: #fff;
            outline: none;
            transition: all 0.3s ease;
        }

            .input-box input::placeholder {
                color: #ccc;
            }

            .input-box input:focus {
                border-color: #00bcd4;
                box-shadow: 0 0 10px rgba(0, 188, 212, 0.5);
            }

    /* Submit Button */
    .wrapper .btn {
        width: 100%;
        height: 45px;
        background: #00bcd4;
        border: none;
        outline: none;
        border-radius: 10px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.3s ease;
    }

        .wrapper .btn:hover {
            background: #009688;
        }

    /* Link */
    .wrapper .link {
        font-size: 14px;
        color: #fff;
        margin-top: 20px;
        display: block;
        text-decoration: none;
        transition: color 0.3s ease;
    }

        .wrapper .link:hover {
            color: #00bcd4;
        }

    /* Responsive design */
    @@media (max-width: 768px) {
        .wrapper

    {
        width: 90%;
        padding: 25px;
    }

    }
</style>

<div class="container2">
    <div class="wrapper" id="forgotPasswordContent">
        <form asp-action="ForgotPassword" method="post">
            <h1>Forgot Password</h1>
            <div class="input-box">
                <input asp-for="Email" type="email" placeholder="Enter your email" required />
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>
