@model Calorie_Scanner_Tracker_And_Diet_Suggestor.Models.ResetPasswordViewModel

@{
    ViewData["Title"] = "Reset Password";
}

<style>
    /* Background Gradient */
    body {
        background: linear-gradient(135deg, #ff7e5f, #feb47b); /* Soft pink to orange gradient */
        font-family: 'Arial', sans-serif;
        margin: 0;
        padding: 0;
    }

    .container2 {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
    }

    .wrapper {
        width: 420px;
        background: rgba(0, 0, 0, 0.6);
        border: 2px solid #feb47b;
        border-radius: 12px;
        padding: 40px;
        text-align: center;
        color: #fff;
        backdrop-filter: blur(6px);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.2);
    }

        /* Header */
        .wrapper h1 {
            font-size: 30px;
            font-weight: 600;
            color: #feb47b;
            margin-bottom: 25px;
        }

    /* Input Styling */
    .input-box {
        position: relative;
        margin: 20px 0;
    }

        .input-box input {
            width: 100%;
            height: 50px;
            background: transparent;
            border: 2px solid #fff;
            border-radius: 10px;
            padding: 15px 20px;
            font-size: 16px;
            color: #fff;
            outline: none;
            transition: border-color 0.3s ease;
        }

            .input-box input::placeholder {
                color: #fff;
            }

            .input-box input:focus {
                border-color: #feb47b;
                box-shadow: 0 0 10px rgba(254, 180, 123, 0.5);
            }

    /* Submit Button */
    .wrapper .btn {
        width: 100%;
        height: 45px;
        background: #feb47b;
        border: none;
        outline: none;
        border-radius: 10px;
        color: #fff;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background-color 0.3s ease;
    }

        .wrapper .btn:hover {
            background-color: #ff7e5f;
        }

    /* Responsive Design */
    @@media (max-width: 768px) {
        .wrapper

    {
        width: 90%;
        padding: 30px;
    }

    }
</style>

<div class="container2">
    <div class="wrapper" id="resetPasswordContent">
        <form asp-action="ResetPassword" method="post">
            <h1>Reset Password</h1>
            <div class="input-box">
                <input asp-for="Email" type="email" placeholder="Enter your email" required />
            </div>
            <div class="input-box">
                <input asp-for="Password" type="password" placeholder="New Password" required />
            </div>
            <div class="input-box">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirm New Password" required />
            </div>
            <button type="submit" class="btn">Submit</button>
        </form>
    </div>
</div>
