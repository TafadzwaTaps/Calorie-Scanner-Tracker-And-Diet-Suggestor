@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Section -->
<div class="container text-center mt-5">
    <div class="hero-section p-5 rounded shadow-lg">
        <h1 class="display-3 fw-bold text-primary">Welcome to <span class="text-success">Calorie Tracker</span></h1>
        <p class="lead text-muted">Track your meals, monitor calories, and achieve your fitness goals.</p>

        <!-- Call-to-Action Buttons -->
        <div class="mt-4">
            <a href="/Auth/Login" class="btn btn-success btn-lg me-3">
                Login <i class="fas fa-utensils ms-2"></i>
            </a>
        </div>
    </div>
</div>

<!-- CSS Styling -->
<style>
    .hero-section {
        background: linear-gradient(to right, #f8f9fa, #e9ecef);
    }
</style>

<!-- Font Awesome for Icons -->
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
