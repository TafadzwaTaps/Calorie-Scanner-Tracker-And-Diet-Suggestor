@model UserSettings

<h2>Settings</h2>

<form method="post" asp-action="UpdateSettings">

    <div>
        <h3>Profile</h3>
        <p>@Model.Profile</p>
    </div>

    <div>
        <h3>Goals</h3>
        <p>@Model.Goals</p>
        <label>Daily Calorie Target:</label>
        <input type="number" asp-for="DailyCalorieTarget" />
    </div>

    <div>
        <h3>Meal Schedule</h3>
        <input type="text" asp-for="MealSchedule" />
    </div>

    <div>
        <h3>Connected Applications</h3>
        <p>None</p>
    </div>

    <div>
        <h3>Language</h3>
        <select asp-for="Language">
            <option>English, UK</option>
            <option>English, US</option>
            <option>Spanish</option>
        </select>
    </div>

    <div>
        <h3>Water Intake</h3>
        <label>Glass Capacity (ml):</label>
        <input type="number" asp-for="WaterGlassCapacity" />
    </div>

    <div>
        <h3>Reminders</h3>
        <label>
            <input type="checkbox" asp-for="MealReminders" /> Enable meal reminders
        </label>
    </div>

    <div>
        <h3>Menu Design</h3>
        <label>Displayed Parameters:</label>
        <input type="text" asp-for="MenuDisplaySettings" />
    </div>

    <div>
        <h3>Navigation</h3>
        <input type="text" asp-for="NavigationAppearance" />
    </div>

    <div>
        <h3>Theme</h3>
        <select asp-for="Theme">
            <option>Dark</option>
            <option>Light</option>
        </select>
    </div>

    <button type="submit">Save Settings</button>
</form>
