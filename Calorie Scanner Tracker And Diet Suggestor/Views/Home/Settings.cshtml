@model UserSettings

<style>
    .card {
        transition: transform 0.2s ease-in-out;
    }

        .card:hover {
            transform: scale(1.02);
        }

</style>

<div class="container mt-4">
    <h2 class="text-center mb-4">
        <i class="fas fa-cog"></i> Settings
    </h2>

    <form method="post" asp-action="UpdateSettings">
        <div class="row">
            <!-- Profile -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-user-circle text-primary"></i> Profile
                        </h4>
                        <p>@Model.Profile</p>
                    </div>
                </div>
            </div>

            <!-- Goals -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-bullseye text-success"></i> Goals
                        </h4>
                        <p>@Model.Goals</p>
                        <label class="form-label">Daily Calorie Target</label>
                        <input type="number" class="form-control" asp-for="DailyCalorieTarget" />
                    </div>
                </div>
            </div>

            <!-- Meal Schedule -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-utensils text-warning"></i> Meal Schedule
                        </h4>
                        <input type="text" class="form-control" asp-for="MealSchedule" placeholder="Enter meal schedule" />
                    </div>
                </div>
            </div>

            <!-- Connected Apps -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-link text-info"></i> Connected Applications
                        </h4>
                        <p>None</p>
                    </div>
                </div>
            </div>

            <!-- Language -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-language text-danger"></i> Language
                        </h4>
                        <select class="form-select" asp-for="Language">
                            <option>English, UK</option>
                            <option>English, US</option>
                            <option>Spanish</option>
                        </select>
                    </div>
                </div>
            </div>

            <!-- Water Intake -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-tint text-primary"></i> Water Intake
                        </h4>
                        <label class="form-label">Glass Capacity (ml)</label>
                        <input type="number" class="form-control" asp-for="WaterGlassCapacity" />
                    </div>
                </div>
            </div>

            <!-- Reminders -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-bell text-warning"></i> Reminders
                        </h4>
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" asp-for="MealReminders" id="mealRemindersCheckbox" />
                            <label class="form-check-label" for="mealRemindersCheckbox">Enable meal reminders</label>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Menu Design -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-list-alt text-secondary"></i> Menu Design
                        </h4>
                        <label class="form-label">Displayed Parameters</label>
                        <input type="text" class="form-control" asp-for="MenuDisplaySettings" placeholder="e.g. Calories, Macros" />
                    </div>
                </div>
            </div>

            <!-- Navigation -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-map-signs text-dark"></i> Navigation
                        </h4>
                        <input type="text" class="form-control" asp-for="NavigationAppearance" placeholder="Customize navigation style" />
                    </div>
                </div>
            </div>

            <!-- Theme -->
            <div class="col-md-6">
                <div class="card shadow-sm border-0">
                    <div class="card-body">
                        <h4 class="card-title">
                            <i class="fas fa-adjust text-muted"></i> Theme
                        </h4>
                        <select class="form-select" asp-for="Theme">
                            <option>Dark</option>
                            <option>Light</option>
                        </select>
                    </div>
                </div>
            </div>
        </div>

        <!-- Save Button -->
        <div class="text-center mt-4">
            <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-save"></i> Save Settings
            </button>
        </div>
    </form>
</div>
