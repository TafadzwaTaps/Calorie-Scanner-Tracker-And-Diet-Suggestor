<!-- Home Page -->
<div class="container text-center mt-5">
    <h1 class="fw-bold">Welcome to <span class="text-primary">Calorie Tracker</span></h1>
    <p class="lead">Track your meals, monitor your calories, and maintain a healthy lifestyle.</p>

    <div class="row mt-4">
        <!-- Breakfast Card -->
        <div class="col-md-4">
            <div class="card meal-card shadow-lg p-4 border-0 text-center">
                <i class="fas fa-coffee fa-3x text-info mb-3"></i>
                <h3>Breakfast</h3>
                <p>Start your day with a healthy meal.</p>
                <a href="/Meals?type=breakfast" class="btn btn-info text-white w-100">View Meals</a>
            </div>
        </div>
        <!-- Lunch Card -->
        <div class="col-md-4">
            <div class="card meal-card shadow-lg p-4 border-0 text-center">
                <i class="fas fa-utensils fa-3x text-warning mb-3"></i>
                <h3>Lunch</h3>
                <p>Keep your energy up with balanced meals.</p>
                <a href="/Meals?type=lunch" class="btn btn-warning text-white w-100">View Meals</a>
            </div>
        </div>
        <!-- Dinner Card -->
        <div class="col-md-4">
            <div class="card meal-card shadow-lg p-4 border-0 text-center">
                <i class="fas fa-moon fa-3x text-success mb-3"></i>
                <h3>Dinner</h3>
                <p>End your day with nutritious choices.</p>
                <a href="/Meals?type=dinner" class="btn btn-success text-white w-100">View Meals</a>
            </div>
        </div>
    </div>
</div>

<!-- Dashboard Section -->
<div class="container mt-5">
    <h2 class="text-center fw-bold">Dashboard Overview</h2>
    <div class="row mt-4">
        <!-- Total Calories Today -->
        <div class="col-md-6">
            <div class="card shadow-lg p-4 border-0 text-center bg-light">
                <h4 class="text-danger"><i class="fas fa-fire fa-lg me-2"></i> Total Calories Today</h4>
                <p class="display-6 fw-bold">1500 kcal</p>
            </div>
        </div>
        <!-- Macronutrient Breakdown -->
        <div class="col-md-6">
            <div class="card shadow-lg p-4 border-0 text-center bg-light">
                <h4 class="text-primary"><i class="fas fa-chart-pie fa-lg me-2"></i> Macronutrient Breakdown</h4>
                <p class="fs-5">Protein: <strong>80g</strong> | Carbs: <strong>200g</strong> | Fats: <strong>50g</strong></p>
            </div>
        </div>
    </div>
</div>

