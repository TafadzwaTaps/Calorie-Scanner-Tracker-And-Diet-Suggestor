@model Calorie_Scanner_Tracker_And_Diet_Suggestor.Models.Users

@{
    ViewData["Title"] = "Account";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="row g-0">
                    <!-- Profile Sidebar -->
                    <div class="col-md-4 text-center bg-primary text-white rounded-start d-flex flex-column align-items-center justify-content-center p-4">
                        <img src="https://img.icons8.com/bubbles/100/000000/user.png" class="rounded-circle shadow-sm mb-3" alt="User Profile">
                        <h5 class="fw-bold">@Model.Username</h5>
                        <p class="small">@Model.Role</p>
                        <a asp-action="Edit" asp-controller="Users" asp-route-id="@Model.Id" class="btn btn-light btn-sm text-primary mt-2 px-4">
                            Edit Profile
                        </a>
                    </div>

                    <!-- Profile Details -->
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title fw-bold">Profile Details</h5>
                            <hr>

                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <p class="mb-1 text-muted">Email</p>
                                    <h6 class="fw-normal">@Model.Email</h6>
                                </div>
                            </div>

                            <div class="row mb-3">
                                <div class="col-sm-6">
                                    <p class="mb-1 text-muted">Role</p>
                                    <h6 class="fw-normal">@Model.Role</h6>
                                </div>

                            <div class="text-end">
                                <a asp-action="Logout" asp-controller="Auth" class="btn btn-outline-danger btn-sm">Log Out</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
